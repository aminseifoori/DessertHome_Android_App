        <activity
            android:name="com.ampesoftware.desserthome.MainView"
            android:label="@string/title_activity_main_view"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ampesoftware.desserthome.MainFavItemsList"
            android:label="@string/title_activity_main_fav_items_list"
            android:screenOrientation="portrait" >
