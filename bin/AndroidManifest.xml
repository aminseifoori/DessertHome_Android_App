            android:name="com.ampesoftware.desserthome.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ampesoftware.desserthome.MainApplicationMenu"
            android:label="@string/title_activity_main_application_menu"
            android:screenOrientation="portrait" >
